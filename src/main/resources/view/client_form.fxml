<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="423.0" prefWidth="707.0" style="-fx-background-color: #7efcb7;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.ClientFormController">
   <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
      <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="235.0" prefWidth="539.0" VBox.vgrow="ALWAYS">
         <VBox fx:id="messageVBox" spacing="10">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
         </VBox>
      </ScrollPane>

      <HBox spacing="10">
         <TextField fx:id="txtMessage" onAction="#txtMessageOnAction" HBox.hgrow="ALWAYS" />
         <Button fx:id="btnImage" onAction="#btnImageOnAction" text="Image" />
         <Button mnemonicParsing="false" text="File" />
         <Button mnemonicParsing="false" text="Imoji" />
         <Button fx:id="btnSend" onAction="#btnSendOnAction" text="Send" />
      </HBox>
   </VBox>
</AnchorPane>
